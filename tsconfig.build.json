{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "allowJs": true
  },
  "include": [
    "orchestrator/src/**/*.ts",
    "orchestrator/src/**/*.tsx",
    "packages/orchestrator/src/**/*.ts",
    "packages/control-plane-schemas/src/**/*.ts",
    "packages/sdk-node/src/**/*.ts",
    "packages/shared/**/*.ts",
    "scripts/design/pipeline/**/*.ts",
    "scripts/design/pipeline/**/*.js",
    "scripts/lib/**/*.js",
    "bin/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "adapters/**",
    "evaluation/**",
    "patterns/**",
    "packages/design-reference-tools/**",
    "packages/design-system/**",
    "packages/design-reference-tools/**/node_modules/**",
    "packages/shared/tests/**"
  ]
}
