{
  "$schema": "https://design-tokens.github.io/community-group/format/module.json",
  "tokenSetOrder": ["global", "semantic"],
  "global": {
    "color": {
      "primary": { "value": "#2d6cdf" },
      "palette1": { "value": "#0b132b" },
      "palette2": { "value": "#f7f7fb" }
    },
    "radius": { "r0": { "value": "4px" }, "r1": { "value": "8px" } },
    "spacing": { "s0": { "value": "4px" }, "s1": { "value": "8px" }, "s2": { "value": "16px" }, "s3": { "value": "24px" } },
    "shadow": { "sh0": { "value": "0 1px 2px rgba(0,0,0,0.08)" } }
  },
  "semantic": {
    "fg": { "value": "{global.color.palette1.value}" },
    "bg": { "value": "{global.color.palette2.value}" },
    "accent": { "value": "{global.color.primary.value}" }
  }
}
