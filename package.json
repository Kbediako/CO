{
  "name": "@kbediako/codex-orchestrator",
  "version": "0.1.3",
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "bin": {
    "codex-orchestrator": "dist/bin/codex-orchestrator.js"
  },
  "files": [
    "dist/bin/**",
    "dist/orchestrator/**",
    "dist/packages/**",
    "dist/scripts/design/pipeline/**",
    "dist/scripts/lib/**",
    "dist/types/**",
    "schemas/**",
    "templates/**",
    "README.md",
    "LICENSE"
  ],
  "imports": {
    "#co/schema/manifest": "./schemas/manifest.json"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:all": "tsc -p tsconfig.json && npm run build:patterns",
    "build:patterns": "tsc -p patterns/tsconfig.json",
    "clean:dist": "node scripts/clean-dist.mjs",
    "docs:check": "node --loader ts-node/esm scripts/docs-hygiene.ts --check",
    "docs:archive-implementation": "node scripts/implementation-docs-archive.mjs",
    "docs:archive-tasks": "node scripts/tasks-archive.mjs",
    "docs:freshness": "node scripts/docs-freshness.mjs --check",
    "docs:sync": "node --loader ts-node/esm scripts/docs-hygiene.ts --sync",
    "prelint": "node scripts/build-patterns-if-needed.mjs",
    "lint": "eslint orchestrator/src orchestrator/tests packages/orchestrator/src packages/orchestrator/tests packages/shared adapters evaluation/harness evaluation/tests --ext .ts,.tsx",
    "pack:audit": "node scripts/pack-audit.mjs",
    "pack:smoke": "node scripts/pack-smoke.mjs",
    "prepack": "npm run clean:dist && npm run build && npm run pack:audit",
    "setup:design-tools": "node --loader ts-node/esm scripts/setup-design-tools.ts",
    "test": "npm run test:orchestrator",
    "test:orchestrator": "vitest run --config vitest.config.core.ts",
    "test:adapters": "vitest run --passWithNoTests --config vitest.config.ts adapters",
    "test:evaluation": "vitest run --passWithNoTests --config vitest.config.ts evaluation/tests",
    "eval:test": "vitest run evaluation/tests",
    "test:watch": "vitest",
    "review": "node --loader ts-node/esm scripts/run-review.ts",
    "status-ui": "node scripts/status-ui-serve.mjs",
    "design:purge-expired": "node --loader ts-node/esm scripts/design/purgeExpired.ts",
    "generate:manifest-types": "node scripts/generate-manifest-types.mjs",
    "mirror:serve": "node scripts/mirror-serve.mjs",
    "mirror:fetch": "node scripts/mirror-site.mjs",
    "mirror:check": "node scripts/mirror-check.mjs",
    "mirror:fingerprint": "node scripts/mirror-style-fingerprint.mjs"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/jscodeshift": "^0.11.6",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.27",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/utils": "^7.0.0",
    "cheerio": "^1.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-patterns": "file:eslint-plugin-patterns",
    "jscodeshift": "^0.15.2",
    "json-schema-to-typescript": "^14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "cheerio": "^1.1.2",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.56.1",
    "pngjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "cheerio": {
      "optional": true
    },
    "pixelmatch": {
      "optional": true
    },
    "playwright": {
      "optional": true
    },
    "pngjs": {
      "optional": true
    }
  },
  "overrides": {
    "esbuild": "^0.25.11"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ink": "^4.4.1",
    "js-yaml": "^4.1.0",
    "react": "^18.3.1"
  }
}
