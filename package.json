{
  "name": "codex-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "codex-orchestrator": "dist/bin/codex-orchestrator.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:patterns": "tsc -p patterns/tsconfig.json",
    "lint": "npm run build:patterns && eslint orchestrator/src orchestrator/tests packages/orchestrator/src packages/orchestrator/tests packages/shared adapters evaluation/harness evaluation/tests --ext .ts",
    "parallel:goals": "node --loader ts-node/esm scripts/run-parallel-goals.ts",
    "setup:design-tools": "node dist/scripts/setup-design-tools.js",
    "test": "vitest run",
    "eval:test": "vitest run evaluation/tests",
    "test:watch": "vitest",
    "review": "node dist/scripts/run-review.js",
    "design:purge-expired": "node dist/scripts/design/purgeExpired.js"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jscodeshift": "^0.11.6",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/utils": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-patterns": "file:eslint-plugin-patterns",
    "jscodeshift": "^0.15.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  },
  "overrides": {
    "esbuild": "^0.25.11"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.20.1",
    "@openai/agents": "0.1.10",
    "@openai/agents-core": "0.1.10",
    "@openai/agents-openai": "0.1.10",
    "cheerio": "^1.1.2",
    "js-yaml": "^4.1.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.56.1",
    "pngjs": "^7.0.0"
  }
}
