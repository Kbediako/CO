{
  "name": "codex-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "codex-orchestrator": "dist/bin/codex-orchestrator.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:all": "tsc -p tsconfig.json && npm run build:patterns",
    "build:patterns": "tsc -p patterns/tsconfig.json",
    "lint": "eslint orchestrator/src orchestrator/tests packages/orchestrator/src packages/orchestrator/tests packages/shared adapters evaluation/harness evaluation/tests --ext .ts,.tsx",
    "parallel:goals": "node --loader ts-node/esm scripts/run-parallel-goals.ts",
    "setup:design-tools": "node dist/scripts/setup-design-tools.js",
    "test": "npm run test:orchestrator",
    "test:orchestrator": "vitest run --config vitest.config.core.ts",
    "test:adapters": "vitest run --passWithNoTests --config vitest.config.ts \"adapters/**/*.test.ts\"",
    "test:evaluation": "vitest run --passWithNoTests --config vitest.config.ts \"evaluation/tests/**/*.test.ts\"",
    "eval:test": "vitest run evaluation/tests",
    "test:watch": "vitest",
    "review": "node dist/scripts/run-review.js",
    "design:purge-expired": "node dist/scripts/design/purgeExpired.js",
    "generate:manifest-types": "node scripts/generate-manifest-types.mjs",
    "mirror:serve": "node scripts/mirror-serve.mjs",
    "mirror:fetch": "node scripts/mirror-site.mjs",
    "mirror:check": "node scripts/mirror-check.mjs",
    "mirror:fingerprint": "node scripts/mirror-style-fingerprint.mjs"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/jscodeshift": "^0.11.6",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.27",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/utils": "^7.0.0",
    "cheerio": "^1.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-patterns": "file:eslint-plugin-patterns",
    "jscodeshift": "^0.15.2",
    "json-schema-to-typescript": "^14.0.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.56.1",
    "pngjs": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  },
  "overrides": {
    "esbuild": "^0.25.11"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ink": "^4.4.1",
    "js-yaml": "^4.1.0",
    "react": "^18.3.1"
  }
}
